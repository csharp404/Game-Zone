@model WebApplication5.ViewModel.UserRoleViewModel

@{
    ViewData["Title"] = "Manage";
}

<h1>Manage</h1>

<h4>@Model.UserName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Manage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
                <input type="hidden" asp-for="UserId" class="form-control" />
           @for (int i = 0; i < Model.UserRoles.Count; i++)
            {

                <div class="form-group">
                    <label asp-for="@Model.UserRoles[i].Name" class="form-check-label">@Model.UserRoles[i].Name</label>
                    <input asp-for="@Model.UserRoles[i].IsSelected" class="form-check-input" />
                    <input type="hidden" asp-for="@Model.UserRoles[i].Name" />
                    <input type="hidden" asp-for="@Model.UserRoles[i].Id" />
                    <span asp-validation-for="UserRoles" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
